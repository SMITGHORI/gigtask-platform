# BUYER: Copy this file to .env.local and fill in your actual values

# Application Configuration
NEXT_PUBLIC_APP_NAME=KaamKonnect
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_DESCRIPTION=Your Gateway to Flexible Work Opportunities in India

# Database Configuration
# BUYER: Replace with your actual database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/kaamkonnect

# Authentication
# BUYER: Generate a secure secret for NextAuth.js
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# Payment Gateway Configuration
# BUYER: Add your Stripe or other payment gateway credentials
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Service Configuration
# BUYER: Configure your email service (SendGrid, AWS SES, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@yourdomain.com

# Cloud Storage (Optional)
# BUYER: Configure if you need file uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Analytics (Optional)
# BUYER: Add Google Analytics or other tracking
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_TAG_MANAGER=GTM-XXXXXXX

# Social Media (Optional)
# BUYER: Add your social media links
NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
NEXT_PUBLIC_TWITTER_HANDLE=@yourtwitterhandle

# API Keys (Optional)
# BUYER: Add any third-party API keys you need
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Development
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
